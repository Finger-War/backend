{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder": {
      "type": "swc",
      "typeCheck": true,
      "options": {
        "swcrcPath": "src/infrastructure/.swcrc"
      }
    },
    "deleteOutDir": true
  }
}
